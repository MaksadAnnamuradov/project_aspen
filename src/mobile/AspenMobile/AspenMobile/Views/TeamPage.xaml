<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AspenMobile.Views.TeamPage"
             xmlns:vm="clr-namespace:AspenMobile.ViewModels"
             xmlns:model="clr-namespace:AspenMobile.Models">
    <ContentPage.BindingContext>
        <vm:TeamDetailViewModel />
    </ContentPage.BindingContext>

    <CollectionView >
        <CollectionView.ItemTemplate>
        <DataTemplate>
            <StackLayout Padding="10">
                <Label Text="{Binding TeamName}"
                       LineBreakMode="NoWrap"
                       FontSize="16" />

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TeamDetailViewModel }}, Path=GetTeamInfoCommand}"
                                          CommandParameter="{Binding . }">
                    </TapGestureRecognizer>
                </StackLayout.GestureRecognizers>

            </StackLayout>
        </DataTemplate>
    </CollectionView.ItemTemplate>
    </CollectionView>


</ContentPage>