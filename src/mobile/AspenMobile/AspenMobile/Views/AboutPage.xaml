<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AspenMobile.Views.AboutPage"
             xmlns:vm="clr-namespace:AspenMobile.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Padding="20">
        <Button Text="Login" Command="{Binding LoginCommand}" Padding="20" />
        <Button Text="Call Api" Command="{Binding CallApiCommand}" Padding="20" />
        <Button Text="Health Check" Command="{Binding HealthCheck}" Padding="20" />
        <Button Text="Events" Command="{Binding CallEvents}" Padding="20" />
        <Label Text="{Binding OutputText}"
               VerticalOptions="EndAndExpand"
               HorizontalOptions="FillAndExpand" />
        <Button Text="Copy JWT" Command="{Binding CopyJwtCommand}" Padding="20" />
    </StackLayout>

</ContentPage>
